<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xqlh.heartsmart.ui.mine.ui.UpdateUserInforActivity">

    <com.xqlh.heartsmart.widget.TitleBar
        android:id="@+id/update_titleBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title_bar"></com.xqlh.heartsmart.widget.TitleBar>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/update_titleBar"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/login_et_bg"
        android:padding="@dimen/dp_10">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请输入新的用户名"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/login_et_bg"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:hint="点击修改性别"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/login_et_bg"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:hint="点击改出生日期"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10">

        <Button
            android:id="@+id/bt_update"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/login_bt_bg_default"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
